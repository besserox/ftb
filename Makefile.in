SUBDIRS = src components/examples

all: ftb ftb_examples

clean:
	for i in ${SUBDIRS}; do ${MAKE} -C $$i $@; done
	rm -f .event_def .config_def
	rm -rf @TEMPSBIN@;
	rm -rf @TEMPLIB@;
#if [ -e @abs_top_srcdir@/include/ftb_throw_events.h ]; then \
#	rm @abs_top_srcdir@/include/ftb_throw_events.h; fi

ftb: 
	if [ ! -e @TEMPSBIN@ ]; then mkdir @TEMPSBIN@; fi				
	if [ ! -e @TEMPLIB@ ]; then mkdir @TEMPLIB@; fi
	if [ ! -e @TEMPLIB@/static ]; then mkdir @TEMPLIB@/static; fi
	if [ ! -e @TEMPLIB@/shared ]; then mkdir @TEMPLIB@/shared; fi
	${MAKE} -C src all

ftb_examples:
	${MAKE} -C components/examples all

install:
	install -v -b -d @prefix@; 
	install -v -b -d @sbindir@;
	install -v -b -d @includedir@;
	install -v -b -d @libdir@ @libdir@/shared @libdir@/static;
	install -v -b -d @prefix@/components/examples;
	install -v -b @TEMPSBIN@/* @sbindir@;
	install -v -b @TEMPLIB@/shared/* @libdir@/shared/;
	install -v -b @TEMPLIB@/static/* @libdir@/static/;
	install -v -b @abs_top_srcdir@/include/* @includedir@;
	install -v -b @abs_top_srcdir@/components/examples/ftb_* @prefix@/components/examples;
