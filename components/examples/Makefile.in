sbindir=@sbindir@
libdir=@libdir@
abs_top_srcdir=@abs_top_srcdir@
abs_top_builddir=@abs_top_builddir@
exec_prefix=@exec_prefix@
prefix=@prefix@
clients=@clients@
network=@network@
TEMPSBIN=@TEMPSBIN@
TEMPLIB=@TEMPLIB@
FTB_NETWORK_CFLAG=@FTB_NETWORK_CFLAG@
ZOID_CLIENT_DIR=@ZOID_CLIENT_DIR@
FTB_LIB_BGL_CN_NAME=@FTB_LIB_BGL_CN_NAME@
FTB_LIB_LINUX_NAME=@FTB_LIB_LINUX_NAME@
FTB_LIB_PATH_SHARED=@FTB_LIB_PATH_SHARED@
FTB_LIB_PATH_STATIC=@FTB_LIB_PATH_STATIC@
INC_DIR=@INC_DIR@
AR=@AR@
CFLAGS_FTB=@CFLAGS_FTB@
CFLAGS_SRC=@CFLAGS_SRC@
UTIL_OBJ=@UTIL_OBJ@
MANAGER_LIB_PATH_SHARED=@MANAGER_LIB_PATH_SHARED@
MANAGER_LIB_PATH_STATIC=@MANAGER_LIB_PATH_STATIC@
MANAGER_LIB_NAME=@MANAGER_LIB_NAME@
CFLAGS_CLIENT=@CFLAGS_CLIENT@
CLIENT_LIB_OBJ=@CLIENT_LIB_OBJ@
CFLAGS_MANAGER=@CFLAGS_MANAGER@
MAKE=@MAKE@
CC=@CC@
RANLIB=@RANLIB@
LIBS_PTHREAD=@LIBS_PTHREAD@

all: ${clients}

linux: ftb_watchdog ftb_polling_logger ftb_simple_publisher ftb_simple_subscriber ftb_notify_logger ftb_multiplecomp ftb_pingpong ftb_example_callback_unsubscribe ftb_eventhandle_example

bgl: ftb_simple_publisher_bgl ftb_simple_subscriber_bgl

CFLAGS_LINUX  = -Wall -g -I${INC_DIR} -I${abs_top_srcdir}/components/examples/include
LDFLAGS_LINUX = -L${FTB_LIB_PATH_SHARED}
LIBS_LINUX    = -l${FTB_LIB_LINUX_NAME} ${LIBS_PTHREAD}

CFLAGS_BGL    = -Wall -g -I${INC_DIR} -I${ZOID_HOME}/include -I${ZOID_CLIENT_DIR}
LDFLAGS_CN    = -L${FTB_LIB_PATH_STATIC} -L${ZOID_LIBC_PATH} -L${BGLSYS_LIB_PATH}
LIBS_CN       = -lftb_blrts -lc -lmsglayer.rts -ldevices.rts -lrts.rts

clean:
	rm -f ftb_watchdog ftb_polling_logger ftb_simple_publisher ftb_simple_subscriber ftb_notify_logger ftb_multiplecomp ftb_pingpong ftb_example_callback_unsubscribe ftb_eventhandle_example
	rm -f ftb_simple_publisher_bgl ftb_simple_subscriber_bgl .bgl_env_test

.bgl_env_test:
	touch .bgl_env_test

ftb_simple_publisher_bgl: .bgl_env_test ftb_simple_publisher.c
	${CC_BLRTS} ${CFLAGS_BGL} ${LDFLAGS_CN} -o $@ ftb_simple_publisher.c ${LIBS_CN}

ftb_simple_subscriber_bgl: .bgl_env_test ftb_simple_subscriber.c
	${CC_BLRTS} ${CFLAGS_BGL} ${LDFLAGS_CN} -o $@ ftb_simple_subscriber.c ${LIBS_CN}

ftb_simple_publisher: ftb_simple_publisher.c
	${CC} ${CFLAGS_LINUX} ${LDFLAGS_LINUX} -o $@ $< ${LIBS_LINUX}

ftb_simple_subscriber: ftb_simple_subscriber.c
	${CC} ${CFLAGS_LINUX} ${LDFLAGS_LINUX} -o $@ $< ${LIBS_LINUX}

ftb_watchdog: ftb_watchdog.c
	${CC} ${CFLAGS_LINUX} ${LDFLAGS_LINUX} -o $@ $< ${LIBS_LINUX}

ftb_polling_logger: ftb_polling_logger.c
	${CC} ${CFLAGS_LINUX} ${LDFLAGS_LINUX} -o $@ $< ${LIBS_LINUX}

ftb_notify_logger: ftb_notify_logger.c
	${CC} ${CFLAGS_LINUX} ${LDFLAGS_LINUX} -o $@ $< ${LIBS_LINUX}

ftb_multiplecomp: ftb_multiplecomp.c
	${CC} ${CFLAGS_LINUX} ${LDFLAGS_LINUX} -o $@ $< ${LIBS_LINUX}
	
ftb_pingpong: ftb_pingpong.c
	${CC} ${CFLAGS_LINUX} ${LDFLAGS_LINUX} -o $@ $< ${LIBS_LINUX}

ftb_example_callback_unsubscribe: ftb_example_callback_unsubscribe.c
	${CC} ${CFLAGS_LINUX} ${LDFLAGS_LINUX} -o $@ $< ${LIBS_LINUX}

ftb_eventhandle_example: ftb_eventhandle_example.c
	${CC} ${CFLAGS_LINUX} ${LDFLAGS_LINUX} -o $@ $< ${LIBS_LINUX}
