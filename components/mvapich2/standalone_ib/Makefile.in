clients=@clients@
FTB_LIB_LINUX_NAME=@FTB_LIB_LINUX_NAME@
FTB_LIB_PATH_SHARED=@FTB_LIB_PATH_SHARED@
FTB_INC_DIR=@INC_DIR@
CC=@CC@
LIBS_PTHREAD=@LIBS_PTHREAD@

all: ${clients}

linux: ftb_port_status_thrower 

CFLAGS_LINUX  = -Wall -g -I${FTB_INC_DIR} -I/usr/local/ofed/include 
LDFLAGS_LINUX = -L${FTB_LIB_PATH_SHARED} -L/usr/local/ofed/lib
LIBS_LINUX    = -l${FTB_LIB_LINUX_NAME} ${LIBS_PTHREAD} -libverbs

clean:
	rm -f ftb_port_status_thrower

ftb_port_status_thrower: ftb_port_status_thrower.c
	${CC} ${CFLAGS_LINUX} ${LDFLAGS_LINUX} -o $@ $< ${LIBS_LINUX}


